<%= form_with(model: show) do |form| %>
  <% if show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
        <% show.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :trailer %>
    <%= form.text_field :trailer %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration %>
  </div>

  <div class="field">
    <%= form.label :sertification %>
    <%= form.select :sertification, Product.sertifications.keys %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.select :country, Product.countries.keys %>
  </div>

  <%= form.file_field :image%>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
