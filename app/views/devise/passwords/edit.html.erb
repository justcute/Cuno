<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-12 col-md-8 col-lg-6 col-xl-5">
    <div class="card shadow-2-strong" style="border-radius: 1rem;">
      <div class="card-body p-5 text-center">
        <h2><%= t('.change_your_password') %></h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-outline mb-2">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'form-control' %>
            <%= f.label :password, t('.new_password'), class:'form-label' %><br />
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
            <% end %>
          </div>

          <div class="form-outline mb-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
            <%= f.label :password_confirmation, t('.confirm_new_password'), class:'form-label'  %><br />
          </div>

          <div class="form-outline mb-2">
            <%= f.submit t('.change_my_password'), class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        <% end %>

        <hr class="my-3">

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
